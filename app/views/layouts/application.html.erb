<!DOCTYPE html>
<html>
<head>
  <title>ExamenRailsP2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!--Boostrap CSS -->
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <!--Boostrap JS-->
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'%>
  <%= csrf_meta_tags %>
</head>
<body>
<section class="container-fluid">
<ul class="nav navbar-nav navbar-right">
 <% if user_signed_in? %>
 <li> <a href="<%= destroy_user_session_path %>" data-method='delete'>
 Salir
 </a></li>
 <% else %>
 <li><a href="<%= new_user_session_path %>"> Login </a></li>
 <li><a href="<%= new_user_registration_path %>"> Registro </a></li>
 <% end %>
</ul>
</section>
<% flash.each do |name, msg| %>
	<% if msg.class == Array %>
	 	<% msg.each do |message| %>
	 	<%= content_tag :div, message, :class=>"alert alert-warning", :id => "flash_#{name}" %>
	<% end %>
	<% else %>
		<%= content_tag :div, msg, :class=>"alert alert-warning", :id => "flash_#{name}" %>
	<% end %>
<% end %>
<%= yield %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

</body>
</html>
